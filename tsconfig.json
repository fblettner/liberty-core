{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@ly_types/*": ["src/types/*"],
      "@ly_utils/*": ["src/utils/*"],
      "@ly_translations/*": ["src/translations/*"], 
      "@ly_styles/*": ["src/styles/*"],
      "@ly_common/*": ["src/common/*"],
      "@ly_charts/*": ["src/charts/*"],
      "@ly_input/*": ["src/input/*"],
      "@ly_services/*": ["src/services/*"],
      "@ly_forms/*": ["src/forms/*"],
    },

  },
  "include": ["src", "src/components/forms/FormsTable/features/.tsx", "react-table-augmentation.d.ts"],
}
